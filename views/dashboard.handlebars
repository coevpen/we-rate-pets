<section class="create-post">
    <h2>Create New Post</h2>
    
    <form class="new-post-form">
        <div>
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" name="post-title" />
        </div>
        
        <div> 
        <img src="" id="img-preview" />
          <label class="file-upload-container" for="file-upload">
          <input id="file-upload" type="file" style="display:none;">
          Select an Image
          </label>
        </div> 

        <div>
        <label for="post-body">Caption:</label>
        <div>
        <textarea cols="80" rows="8" id="post-body" name="post-body"></textarea>
        </div>

        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
  <h2 class="create-post">Your Posts</h2>
    {{#each posts as |post|}}
    {{> post-info post}}
    <div class="container-xxl">
      <div class="row">
        <div class ="col-12 d-flex justify-content-center">
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Above Post</a>
        </div>
      </div>
    </div>
    {{> user-comments post.comments}}
    {{/each}}
</section>
{{/if}}



