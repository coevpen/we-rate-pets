<div class="col-12 d-flex justify-content-center">
    <div class="card">
        <div class="card-header">
            <a href="/post/{{id}}" class="card-header-link">{{title}}</a>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center"></div>
                <img src="{{image_url}}"  width="360px" height="300px" alt="">
            </div>
            <p class="card-text">{{post_body}}</p>
            <div class="d-flex justify-content-center">
                <a href="/post/{{id}}" id="comment-btn" class="btn btn-primary">Rate My Pet!</a>
            </div>
            <div class="d-flex justify-content-between">
                <div id="post-by">Posted by {{user.username}} on {{format_date created_at}}</div>
                <div id="comments-count">({{comments.length}}) Comment(s)</div>
            </div>
        </div>
    </div>
</div> 